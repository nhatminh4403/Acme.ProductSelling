                <!-- Phần ngôn ngữ -->
                <div>
                    <h6 class="fw-bold">@L["Footer:Language"]</h6>
                    <div class="mt-3">
                        @await Component.InvokeAsync(typeof(LanguageSwitchViewComponent))
                    </div>
                </div>
            </div>

        </div>

        <hr style="margin-top:unset;margin-bottom:unset">

        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0 text-decoration-none text-center text-md-start">
                <span class="fw-bold me-3">@L["Footer:ConnectWithUs"]</span>
