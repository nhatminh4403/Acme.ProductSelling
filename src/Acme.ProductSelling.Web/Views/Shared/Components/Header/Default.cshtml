@using Acme.ProductSelling.Permissions
@using Acme.ProductSelling.Web.Views.Shared.Components.CategoriesMenu
@using Microsoft.AspNetCore.Authorization

@inject ICurrentUser CurrentUser
@inject IAuthorizationService AuthorizationService

@{
    var hasAdminPermission = await AuthorizationService.IsGrantedAsync(ProductSellingPermissions.Products.Default);

}
<nav class="navbar navbar-expand-lg navbar-light border-bottom sticky-top border-black" style="background-color: aqua">
    <div class="container">
        <a class="navbar-brand" href="/" aria-label="Home">
            <img src="~/images/monitor.png" alt="Home" style="width: 75px; aspect-ratio: 16/9;" loading="lazy" />
        </a>

        <div class="d-flex align-items-center d-lg-none ms-auto gap-2">
            <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#searchCollapse" aria-expanded="false" aria-controls="searchCollapse">
                <i class="bi bi-search fs-5"></i>
            </button>
            <a href="/cart" id="shopping-cart-widget-mobile" class="btn btn-outline-dark position-relative flex-shrink-0" aria-label="Cart">
                <i class="bi bi-cart3 fs-5"></i>
                <span class="cart-item-count position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
            </a>
            <button class="btn btn-outline-dark" type="button" style="box-shadow:none" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list fs-5"></i>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <form class="d-none d-lg-flex my-2 my-lg-0 flex-grow-1 mx-lg-2" asp-page="/Products/ProductsByName" method="get">
                <div class="input-group rounded bg-white">
                    <input class="form-control border-0" name="name" type="search" autocomplete="off" placeholder="@L["Search..."]" aria-label="@L["Search..."]">
                    <button class="btn border-0 border-start-0" type="submit" style="white-space: nowrap;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
            <div class="d-none d-lg-flex align-items-center ms-auto">
                <div class="me-2">
                    <a href="#" class="btn fw-bold text-success text-start shadow-none" style="font-size: small">
                        <span>
                            @L["UI:Hotline"] <br />
                            0123456789
                        </span>
                    </a>
                </div>
                @if (CurrentUser.IsAuthenticated)
                {
                    <div class="d-flex align-items-center ms-lg-auto">
                        <div class="dropdown me-2">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @CurrentUser.UserName
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-page="/Account/Manage/Index">@L["Account:ManageYourProfile"]</a></li>
                                <li><a class="dropdown-item" asp-page="/Orders/OrderHistory">@L["Order:MyOrders"]</a></li>
                                @if (hasAdminPermission || CurrentUser.IsInRole("Admin") || CurrentUser.IsInRole("Admin".ToLower()))
                                {
                                    <li><a class="dropdown-item" href="@Url.Page("/Admin/Index", new { area = "" })" data-no-culture="true">@L["Admin:Panel"]</a></li>
                                }

                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/Account/Logout?returnUrl=/" id="logoutButton" data-no-culture="true">
                                        <i class="bi bi-box-arrow-right me-2"></i>@L["Logout"]
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <a href="/cart" id="shopping-cart-widget" class="btn btn-outline-dark me-2 position-relative flex-shrink-0" aria-label="Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            <span class="cart-item-count position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">0</span>
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center ms-lg-auto">
                        <div class="login-dropdown">
                            <button type="button" class="btn btn-success d-flex align-items-center flex-shrink-0 me-2 login-btn-main">
                                <i class="bi bi-person-fill me-1"></i>
                                @L["Login"]
                                <i class="bi bi-chevron-down ms-1" style="font-size: 0.8em;"></i>
                            </button>
                            <div class="login-dropdown-content">
                                <div class="dropdown-welcome-text">
                                    <i class="bi bi-hand-thumbs-up"></i>
                                    @L["Login:Welcome"]
                                </div>
                                <div class="dropdown-buttons">
                                    <button class="dropdown-btn-login" data-bs-toggle="modal" data-bs-target="#loginModal">
                                        @L["Login:Default"]
                                    </button>
                                    <button class="dropdown-btn-register" data-bs-toggle="modal" data-bs-target="#registerModal">
                                        @L["Register:Default"]
                                    </button>
                                </div>
                                <a href="#" class="dropdown-help-link">
                                    <i class="bi bi-question-circle"></i>
                                    @L["Help"]
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <ul class="navbar-nav d-lg-none mt-3">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="mobileCategoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list me-2"></i>@L["Category:Categories"]
                    </a>
                    @await Component.InvokeAsync(typeof(CategoriesMenuViewComponent))
                </li>

                <!-- Mobile Menu Items for Authenticated User -->
                @if (CurrentUser.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Manage/Index">@L["Account:ManageYourProfile"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Orders/OrderHistory">@L["Order:MyOrders"]</a>
                    </li>
                    @if (hasAdminPermission || CurrentUser.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Page("/Admin/Index")" data-no-culture="true">@L["Admin:Panel"]</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout?returnUrl=/" data-no-culture="true">@L["Logout"]</a>
                    </li>
                }
                else
                {
                    <!-- Mobile Menu Items for Guest User -->
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">@L["Login"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">@L["Register"]</a>
                    </li>
                }

                <hr />
                <li class="nav-item">
                    <a class="nav-link" href="#">@L["UI:Hotline"]: 0123456789</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="collapse w-100 d-lg-none" id="searchCollapse">
        <div class="container">
            <form class="d-flex my-2" asp-page="/Products/ProductsByName" method="get">
                <div class="input-group rounded bg-white">
                    <input class="form-control border-0" name="name" type="search" autocomplete="off" placeholder="@L["Search..."]" aria-label="@L["Search..."]">
                    <button class="btn border-0 border-start-0" type="submit" style="white-space: nowrap;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</nav>