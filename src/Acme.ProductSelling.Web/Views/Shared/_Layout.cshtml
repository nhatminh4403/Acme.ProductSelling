@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared;
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic.Bundling;
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.LeptonXLite;
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.LeptonXLite.Bundling;
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.LeptonXLite.Languages;
@using Volo.Abp.AspNetCore.Mvc.UI.RazorPages
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling

@{
    
}


<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/libs/@@fortawesome/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/images/monitor.png" rel="shortcut icon" type="image/x-icon" />
    <abp-style-bundle name="@LeptonXLiteThemeBundles.Styles.Global" />
    <abp-style-bundle name="Main.Global" />

    @await RenderSectionAsync("styles", required: false)

    <style>

        * {
            margin: 0;
            padding: 0;
            /* outline: 1px dashed rgba(255,0,0,0.2); */
        }

        .input-group .form-control:focus {
            box-shadow: none;
            border-color: transparent;
        }

    </style>
</head>
<body class="abp-application-layout bg-light d-flex flex-column min-vh-100">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <small>
                        <i class="fas fa-phone"></i> +1 234 567 890 | <i class="fas fa-envelope"></i>
                        support@techstore.com
                    </small>
                </div>
                <div class="col-md-6 text-end">
                    <small>Free Shipping on Orders Over $50</small>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync(typeof(Acme.ProductSelling.Web.Views.Shared.Components.Header.HeaderViewComponent))

    <div style="background: #ececec">

        @RenderBody()
    </div>

    @await Component.InvokeAsync(typeof(Acme.ProductSelling.Web.Views.Shared.Components.Footer.FooterViewComponent))

    @await Component.InvokeAsync(typeof(Acme.ProductSelling.Web.Views.Shared.Components.Modal.ModalViewComponent))

    <script src="~/libs/abp/core/abp.js"></script>
    <abp-script-bundle name="@LeptonXLiteThemeBundles.Scripts.Global" />

    <script src="~/Abp/ServiceProxyScript" asp-append-version="true"></script>
    <script src="~/Abp/ApplicationLocalizationScript?cultureName=@CultureInfo.CurrentUICulture.Name"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @await RenderSectionAsync("scripts", required: false)

    <abp-script-bundle name="Main.Global" />

</body>
</html>