    <abp-script-bundle name="Main.Global" />


    <script>
        // Header scroll effect
        const header = document.getElementById('mainHeader');
        let lastScroll = 0;

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll > 10) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }

            lastScroll = currentScroll;
        });

        // User dropdown toggle
        const userDropdown = document.getElementById('userDropdown');
        if (userDropdown) {
            userDropdown.addEventListener('click', (e) => {
                e.stopPropagation();
                userDropdown.classList.toggle('active');
                const loginDropdown = document.getElementById('loginDropdown');
                if (loginDropdown) loginDropdown.classList.remove('active');
            });
        }

        // Login dropdown toggle
        const loginDropdown = document.getElementById('loginDropdown');
        if (loginDropdown) {
            loginDropdown.addEventListener('click', (e) => {
                e.stopPropagation();
                loginDropdown.classList.toggle('active');
            });
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', () => {
            if (userDropdown) userDropdown.classList.remove('active');
            if (loginDropdown) loginDropdown.classList.remove('active');
        });

        // Mobile search toggle
        const searchToggleBtn = document.getElementById('searchToggleBtn');
        const mobileSearch = document.querySelector('.mobile-search');

        if (searchToggleBtn && mobileSearch) {
            searchToggleBtn.addEventListener('click', () => {
                mobileSearch.classList.toggle('d-none');
                if (!mobileSearch.classList.contains('d-none')) {
                    mobileSearch.querySelector('.search-input').focus();
                }
            });
        }

        // Category menu button click handler
        const categoryBtn = document.getElementById('categoryMenuBtn');
        if (categoryBtn) {
            categoryBtn.addEventListener('click', () => {
                const megamenu = document.getElementById('categoryMegamenu');
                if (megamenu) {
                    megamenu.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        }
    </script>
    <script>
        // Megamenu functionality
        (function() {
            const megamenu = document.getElementById('categoryMegamenu');
            const overlay = document.getElementById('categoryMegamenuOverlay');
            const closeBtn = document.getElementById('megamenuCloseBtn');
            const categoryLinks = document.querySelectorAll('.category-item-link');
            const contentPanels = document.querySelectorAll('.category-content-panel');

            // Close megamenu
            function closeMegamenu() {
                megamenu.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }

            // Close button click
            if (closeBtn) {
                closeBtn.addEventListener('click', closeMegamenu);
            }

            // Overlay click
            if (overlay) {
                overlay.addEventListener('click', closeMegamenu);
            }

            // ESC key to close
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && megamenu.classList.contains('active')) {
                    closeMegamenu();
                }
            });

            // Category switching
            categoryLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const categoryId = link.getAttribute('data-category-id');

                    // Update active state on sidebar
                    categoryLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');

                    // Show corresponding content panel
                    contentPanels.forEach(panel => {
                        if (panel.getAttribute('data-category-id') === categoryId) {
                            panel.style.display = 'block';
                            // Scroll to top of content
                            document.getElementById('megamenuContent').scrollTop = 0;
                        } else {
                            panel.style.display = 'none';
                        }
                    });
                });
            });

            // Set first category as active on load
            if (categoryLinks.length > 0) {
                categoryLinks[0].classList.add('active');
            }
        })();
    </script>

    <script>
             // Header Mobile Menu Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Elements
            const searchToggleBtn = document.getElementById('searchToggleBtn');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileCategoryBtn = document.getElementById('mobileCategoryBtn');
            const mobileSearch = document.querySelector('.mobile-search');
            const userDropdown = document.getElementById('userDropdown');
            const loginDropdown = document.getElementById('loginDropdown');
            const categoryMenuBtn = document.getElementById('categoryMenuBtn');
            const header = document.getElementById('mainHeader');
            const mobileAccountMenu = document.querySelector('.mobile-account-menu');
            const mobileAccountOverlay = document.querySelector('.mobile-account-overlay');
            const mobileAccountClose = document.querySelector('.mobile-account-close');

            // Mobile Search Toggle
            if (searchToggleBtn && mobileSearch) {
                searchToggleBtn.addEventListener('click', function() {
                    mobileSearch.classList.toggle('d-none');

                    // Change icon
                    const icon = this.querySelector('i');
                    if (mobileSearch.classList.contains('d-none')) {
                        icon.className = 'bi bi-search';
                    } else {
                        icon.className = 'bi bi-x-lg';
                        // Focus on search input
                        setTimeout(() => {
                            mobileSearch.querySelector('.search-input').focus();
                        }, 100);
                    }
                });
            }

            // Mobile Category Button Toggle
            if (mobileCategoryBtn) {
                mobileCategoryBtn.addEventListener('click', function() {
                    const megamenu = document.querySelector('.category-megamenu');
                    const overlay = document.querySelector('.category-megamenu-overlay');

                    if (megamenu && overlay) {
                        megamenu.classList.add('active');
                        overlay.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    }
                });
            }

            // Mobile Account Menu Toggle
            if (mobileMenuBtn && mobileAccountMenu && mobileAccountOverlay) {
                mobileMenuBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    mobileAccountMenu.classList.add('active');
                    mobileAccountOverlay.classList.add('active');
                    document.body.style.overflow = 'hidden';
                });
            }

            // Close Mobile Account Menu
            function closeMobileAccountMenu() {
                if (mobileAccountMenu && mobileAccountOverlay) {
                    mobileAccountMenu.classList.remove('active');
                    mobileAccountOverlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            }

            if (mobileAccountClose) {
                mobileAccountClose.addEventListener('click', closeMobileAccountMenu);
            }

            if (mobileAccountOverlay) {
                mobileAccountOverlay.addEventListener('click', closeMobileAccountMenu);
            }

            // User Dropdown Toggle (Desktop)
            if (userDropdown) {
                const dropdownBtn = userDropdown.querySelector('.action-btn');
                const dropdownMenu = userDropdown.querySelector('.user-dropdown-menu');

                if (dropdownBtn) {
                    dropdownBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        userDropdown.classList.toggle('active');

                        // Close login dropdown if open
                        if (loginDropdown) {
                            loginDropdown.classList.remove('active');
                        }
                    });
                }

                // Close when clicking outside
                document.addEventListener('click', function(e) {
                    if (!userDropdown.contains(e.target)) {
                        userDropdown.classList.remove('active');
                    }
                });
            }

            // Login Dropdown - already handled by CSS hover, but add click for mobile
            if (loginDropdown) {
                const loginBtn = loginDropdown.querySelector('.action-btn');

                if (loginBtn && window.innerWidth <= 768) {
                    loginBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        loginDropdown.classList.toggle('active');

                        const dropdownContent = loginDropdown.querySelector('.login-dropdown-content');
                        if (dropdownContent) {
                            dropdownContent.style.display =
                                dropdownContent.style.display === 'block' ? 'none' : 'block';
                        }
                    });
                }
            }

            // Header scroll effect
            if (header) {
                let lastScroll = 0;
                window.addEventListener('scroll', function() {
                    const currentScroll = window.pageYOffset;

                    if (currentScroll > 50) {
                        header.classList.add('scrolled');
                    } else {
                        header.classList.remove('scrolled');
                    }

                    lastScroll = currentScroll;
                });
            }

            // Category Menu Toggle (Desktop)
            if (categoryMenuBtn) {
                categoryMenuBtn.addEventListener('click', function() {
                    const megamenu = document.querySelector('.category-megamenu');
                    const overlay = document.querySelector('.category-megamenu-overlay');

                    if (megamenu && overlay) {
                        megamenu.classList.add('active');
                        overlay.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    }
                });
            }

            // Close Megamenu
            const megamenuCloseBtn = document.querySelector('.megamenu-close-btn');
            const megamenuOverlay = document.querySelector('.category-megamenu-overlay');

            if (megamenuCloseBtn) {
                megamenuCloseBtn.addEventListener('click', closeMegamenu);
            }

            if (megamenuOverlay) {
                megamenuOverlay.addEventListener('click', closeMegamenu);
            }

            function closeMegamenu() {
                const megamenu = document.querySelector('.category-megamenu');
                const overlay = document.querySelector('.category-megamenu-overlay');

                if (megamenu && overlay) {
                    megamenu.classList.remove('active');
                    overlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            }

            // ESC key to close menus
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeMegamenu();
                    closeMobileAccountMenu();

                    // Close dropdowns
                    if (userDropdown) {
                        userDropdown.classList.remove('active');
                    }
                }
            });

            // Handle window resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    // Hide mobile search on desktop
                    if (window.innerWidth > 991 && mobileSearch) {
                        mobileSearch.classList.add('d-none');
                        if (searchToggleBtn) {
                            const icon = searchToggleBtn.querySelector('i');
                            icon.className = 'bi bi-search';
                        }
                    }

                    // Close mobile account menu on desktop
                    if (window.innerWidth > 768) {
                        closeMobileAccountMenu();
                    }
                }, 250);
            });
        });
              
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const categoryBtn = document.getElementById('categoryMenuBtn');
            const heroSection = document.querySelector('section.container.mt-2');

            if (!categoryBtn || !heroSection) return;

            function toggleCategoryButton() {
                const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
                const scrollPosition = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollPosition > heroBottom) {
                    categoryBtn.classList.add('show-on-scroll');
                    categoryBtn.style.opacity = '1';
                    categoryBtn.style.visibility = 'visible';
                    categoryBtn.style.transform = 'scale(1)';
                } else {
                    categoryBtn.classList.remove('show-on-scroll');
                    categoryBtn.style.opacity = '0';
                    categoryBtn.style.visibility = 'hidden';
                    categoryBtn.style.transform = 'scale(0.95)';
                }
            }

            toggleCategoryButton();

            let scrollTimeout;
            window.addEventListener('scroll', function() {
                if (scrollTimeout) {
                    window.cancelAnimationFrame(scrollTimeout);
                }
                scrollTimeout = window.requestAnimationFrame(toggleCategoryButton);
            });

            window.addEventListener('resize', toggleCategoryButton);
        });
    </script>
</body>
