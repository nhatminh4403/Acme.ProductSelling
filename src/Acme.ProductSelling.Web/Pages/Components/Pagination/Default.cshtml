@model Acme.ProductSelling.Web.Models.PaginationViewModel

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-0">

            @* First Page Button *@
            @if (Model.ShowFirstLast && Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.BuildPageUrl(1)" aria-label="First">
                        <span aria-hidden="true">&laquo;&laquo;</span>
                    </a>
                </li>
            }

            @* Previous Page Button *@
            @if (Model.ShowPrevNext)
            {
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    @if (Model.HasPreviousPage)
                    {
                        <a class="page-link" href="@Model.BuildPageUrl(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </span>
                    }
                </li>
            }

            @* Page Numbers *@
            @if (Model.ShowPageNumbers)
            {
                var (start, end) = Model.GetPageRange();

                @* Show ellipsis if there are hidden pages at the start *@
                @if (start > 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }

                @* Page number buttons *@
                @for (int i = start; i <= end; i++)
                {
                    var pageNumber = i;
                    <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : "")">
                        @if (pageNumber == Model.CurrentPage)
                        {
                            <span class="page-link">
                                @pageNumber
                                <span class="visually-hidden">(current)</span>
                            </span>
                        }
                        else
                        {
                            <a class="page-link" href="@Model.BuildPageUrl(pageNumber)">@pageNumber</a>
                        }
                    </li>
                }

                @* Show ellipsis if there are hidden pages at the end *@
                @if (end < Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            @* Next Page Button *@
            @if (Model.ShowPrevNext)
            {
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    @if (Model.HasNextPage)
                    {
                        <a class="page-link" href="@Model.BuildPageUrl(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </span>
                    }
                </li>
            }

            @* Last Page Button *@
            @if (Model.ShowFirstLast && Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.BuildPageUrl(Model.TotalPages)" aria-label="Last">
                        <span aria-hidden="true">&raquo;&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

    @* Pagination Info *@
    @if (Model.ShowInfo && Model.TotalCount > 0)
    {
        <div class="text-center text-muted mt-2">
            <small>
                Showing @Model.StartItem to @Model.EndItem of @Model.TotalCount entries
            </small>
        </div>
    }
}
else if (Model.TotalCount > 0)
{
    @* Show info even if only one page *@
    @if (Model.ShowInfo)
    {
        <div class="text-center text-muted mt-2">
            <small>
                Showing @Model.TotalCount @(Model.TotalCount == 1 ? "entry" : "entries")
            </small>
        </div>
    }
}
