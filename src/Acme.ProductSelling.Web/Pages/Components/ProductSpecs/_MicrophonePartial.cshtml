@model Acme.ProductSelling.Specifications.MicrophoneSpecificationDto

<table class="table table-bordered mb-0">
    <tbody>
        <tr>
            <th>@L["Product:Microphone:MicrophoneType"]</th>
            <td>@Model.MicrophoneType</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:PolarPattern"]</th>
            <td>@Model.PolarPattern</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:Frequency"]</th>
            <td>@Model.Frequency</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:SampleRate"]</th>
            <td>@Model.SampleRate</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:Sensitivity"]</th>
            <td>@Model.Sensitivity</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:Connectivity"]</th>
            <td>@Model.Connectivity</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:Connection"]</th>
            <td>@Model.Connection</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:HasShockMount"]</th>
            <td>@L[Model.HasShockMount ? "Product:Yes" : "Product:No"]</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:HasPopFilter"]</th>
            <td>@L[Model.HasPopFilter ? "Product:Yes" : "Product:No"]</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:HasRgb"]</th>
            <td>@L[Model.HasRgb ? "Product:Yes" : "Product:No"]</td>
        </tr>
        <tr>
            <th>@L["Product:Microphone:Color"]</th>
            <td>@Model.Color</td>
        </tr>
    </tbody>
</table>