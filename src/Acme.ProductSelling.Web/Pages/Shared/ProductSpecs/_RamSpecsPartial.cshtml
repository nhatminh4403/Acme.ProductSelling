@model Acme.ProductSelling.Specifications.RamSpecificationDto
@using Microsoft.Extensions.Localization
@using Acme.ProductSelling.Localization
@inject IStringLocalizer<ProductSellingResource> L

<h5>@L["RAM Details"]</h5>
<table class="table table-bordered mb-0">
    <tbody>
        <tr>
            <th>@L["Type"]</th>
            <td>@Model.RamType</td>
        </tr>
        <tr>
            <th>@L["Capacity"]</th>
            <td>@Model.Capacity GB (@Model.ModuleCount modules)</td>
        </tr>
        <tr>
            <th>@L["Speed"]</th>
            <td>@Model.Speed MT/s</td>
        </tr>
        <tr>
            <th>@L["Timing"]</th>
            <td>@Model.Timing</td>
        </tr>
        <tr>
            <th>@L["Voltage"]</th>
            <td>@Model.Voltage V</td>
        </tr>
        <tr>
            <th>@L["RGB"]</th>
            <td>@L[Model.HasRGB ? "Yes" : "No"]</td>
        </tr>
    </tbody>
</table>
