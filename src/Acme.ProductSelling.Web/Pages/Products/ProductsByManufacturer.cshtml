@page "/products/category/{CategoryId:Guid}/manufacturer/{ManufacturerId:Guid}"
@model Acme.ProductSelling.Web.Pages.Products.ProductsByManufacturerModel

@using Acme.ProductSelling.Localization
@using Microsoft.Extensions.Localization
@using Acme.ProductSelling.Categories
@inject IStringLocalizer<ProductSellingResource> L
@{
    ViewData["Title"] = "Product By Manufacturer";
    Layout = "/Views/Shared/_Layout.cshtml"; // Đặt layout cho trang này
}
<div class="container mt-4">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">@L["Menu:Home"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@L[Model.CategoryName] @L[Model.ManufacturerName]</li>
        </ol>
    </nav>
</div>

<div class="container my-4 pb-1 bg-light rounded">
    @if (Model.Products != null && Model.Products.Items.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @* Ví dụ 4 cột *@
            @foreach (var product in Model.Products.Items)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug">
                                <img src="@product.ImageUrl" class="card-img-top p-3" alt="@product.ProductName" style="max-height: 200px; object-fit: contain;">
                            </a>
                        }
                        else
                        {
                            <div class="text-center p-5 bg-light"> <i class="fas fa-image fa-5x text-secondary"></i> </div> @* Ảnh placeholder *@
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug">@product.ProductName</a>
                            </h5>
                            <p class="card-text mt-auto">
                                <span class="fw-bold fs-5 text-danger">
                                    @product.OriginalPrice.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))
                                </span>
                            </p>
                            <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug"
                               class="btn btn-outline-primary btn-sm mt-2">
                                @L["ViewDetails"]
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Component phân trang *@
        <div class="mt-4">
            <abp-paginator asp-page="/" show-info="true" model="Model.PagerModel" class="mb-4">
            </abp-paginator>
        </div>
    }
    else
    {
        <div class="alert alert-info">@L["NoProductsFoundInCategory"]</div> @* Key localization mới *@
    }
</div>
