@page "/collections/{slug}/price/{PriceRange?}"
@model Acme.ProductSelling.Web.Pages.Products.ProductByPriceModel
@using Acme.ProductSelling.Categories

@using Acme.ProductSelling.Web.Helpers

@section styles {
    <link href="~/css/shared/products/product-item.css" rel="stylesheet" />
}
@functions {
}

@{
    ViewData["Title"] =  L["UI:Title:ProductByPrice"];
    Layout = "/Views/Shared/_Layout.cshtml"; // Đặt layout cho trang này
    var title = Model.DisplayPriceRangeName + HelperMethods.GetCategoryLocalizerName(Model.CategoryName, L);
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            @* Breadcrumb style title *@
            <h5 class="text-muted mb-0">@HelperMethods.GetCategoryLocalizerName(Model.CategoryName, L)</h5>
            <h1 class="fw-bold">@Model.DisplayPriceRangeName</h1>
        </div>

        <!-- Sorting dropdown example -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                @L["SortBy"]
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="?slug=@Model.Slug&PriceRange=@Model.PriceRange&sorting=DiscountedPrice">@L["Price:LowToHigh"]</a></li>
            </ul>
        </div>
    </div>

    @if (Model.Products != null && Model.Products.Items.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model.Products.Items)
            {
                <div class="col">
                    <div class="card product-card shadow-sm h-100">
                        @* Image Logic *@
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug">
                                <img src="@product.ImageUrl" class="card-img-top p-3" alt="@product.ProductName" style="height: 200px; object-fit: contain;">
                            </a>
                        }
                        else
                        {
                            <div class="text-center p-5 bg-light"><i class="fas fa-image fa-3x"></i></div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">
                                <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug" class="text-decoration-none text-dark">
                                    @product.ProductName
                                </a>
                            </h6>

                            @* Price Display *@
                            <div class="mt-auto">
                                @if (product.DiscountedPrice.HasValue)
                                {
                                    <span class="text-decoration-line-through text-muted small">
                                        @product.OriginalPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                    </span>
                                    <div class="text-danger fw-bold fs-5">
                                        @product.DiscountedPrice.Value.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger fw-bold fs-5">
                                        @product.OriginalPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <abp-paginator model="Model.PagerModel" show-info="true"></abp-paginator>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            @L["NoProductsFound"] - @Model.DisplayPriceRangeName
        </div>
    }
</div>