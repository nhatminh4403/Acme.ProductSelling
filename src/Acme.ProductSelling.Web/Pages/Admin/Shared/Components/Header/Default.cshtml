@using Acme.ProductSelling.Web.Themes.LeptonXLite.Components.Toolbar.LanguageSwitch
@using Acme.ProductSelling.Web.Pages.Admin.Shared.Components.Breadcrumb
@inject ICurrentUser CurrentUser
@{
    var fullName = @CurrentUser.SurName + " " + @CurrentUser.Name;
}

<header class="header">
    <div class="header-left">
        <button class="toggle-btn" id="toggleBtn">
            <i class="fas fa-bars"></i>
        </button>
        <div class="header-title">@L["Dashboard"]</div>
    </div>
    <div class="header-right">
        @await Component.InvokeAsync(typeof(BreadcrumbViewComponent))

        <div class="language-switcher" id="languageSwitcher">
            @await Component.InvokeAsync(typeof(LanguageSwitchViewComponent))
        </div>

        <!-- Account Dropdown -->
        <div class="account-dropdown">
            <div class="account-btn" id="accountBtn">
                <div class="account-avatar">JD</div>
                <div class="account-info">
                    <div class="account-name">@fullName</div>
                    <div class="account-role">@string.Join(", ", CurrentUser.Roles)</div>
                </div>
                <i class="fas fa-chevron-down account-arrow" id="accountArrow"></i>
            </div>
            <div class="dropdown-menu-custom" id="accountDropdown">
                <div class="dropdown-header">
                    <div class="dropdown-user-name">@CurrentUser.UserName</div>
                    <div class="dropdown-user-email">@CurrentUser.Email</div>
                </div>

                <a asp-page="/Account/Manage" class="dropdown-item-custom">
                    <i class="fas fa-cog"></i>
                    <span>Account Settings</span>
                </a>
                <a href="#" class="dropdown-item-custom">
                    <i class="fas fa-bell"></i>
                    <span>Notifications</span>
                </a>
                <a href="#" class="dropdown-item-custom">
                    <i class="fas fa-question-circle"></i>
                    <span>Help & Support</span>
                </a>
                <div class="dropdown-divider-custom"></div>

                <a href="/Account/Logout?returnUrl=/" class="dropdown-item-custom danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>
                        @L["Logout"]
                    </span>
                </a>
            </div>
        </div>
    </div>
</header>
