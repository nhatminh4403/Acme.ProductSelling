            min-height: 400px;
        }

        .statistic .value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .statistic .label {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .card-title {
            font-size: 1rem;
            font-weight: 600;
        }

        .form-label.required:after {
            content: " *";
