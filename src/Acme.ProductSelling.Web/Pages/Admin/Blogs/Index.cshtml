@page "/{prefix}/blogs"
@model Acme.ProductSelling.Web.Pages.Admin.Blogs.IndexModel
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = L["UI:Title:Admin:Blogs"];
    Layout = "/Pages/Admin/Shared/_AdminLayout.cshtml";
}
@section scripts {
    <abp-script src="/Pages/Admin/Blogs/Index.js" />
}
<abp-card class="py-3 px-1">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6" class="d-flex justify-content-start align-items-center">
                <abp-card-title class="mb-0 ms-3">@L["Blog:Blogs"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(ProductSellingPermissions.Blogs.Create))
                {
                    <abp-button id="NewBlogPostButton"
                                text="@L["Blog:CreateBlog"].Value"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" hoverable-rows="true" id="BlogsTable"></abp-table>
    </abp-card-body>
</abp-card>