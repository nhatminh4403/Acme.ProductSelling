@page "/admin/blogs"
@model Acme.ProductSelling.Web.Pages.Admin.Blogs.IndexModel
@using Acme.ProductSelling.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@using Acme.ProductSelling.Permissions

@inject IStringLocalizer<ProductSellingResource> L
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = L["UI:Title:Admin:Blogs"];
    Layout = "/Pages/Admin/Shared/_AdminLayout.cshtml";

}
@section scripts {
    <abp-script src="/Pages/Admin/Blogs/Index.js" />
    @* <script src="~/js/admin/Index.js"></script> *@

}

<abp-card class="py-3 px-1">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6" class="d-flex justify-content-start align-items-center">
                @* Tiêu đề Card *@
                <abp-card-title class="mb-0 ms-3">@L["Blog:Blogs"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @* Nút tạo mới - Chỉ hiển thị nếu user có quyền Create *@
                @if (await AuthorizationService.IsGrantedAsync(ProductSellingPermissions.Blogs.Create))
                {
                    <abp-button id="NewBlogPostButton"
                                text="@L["Blog:CreateBlog"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        @* Tag Helper tạo bảng, DataTables sẽ gắn vào id này *@
        <abp-table striped-rows="true" hoverable-rows="true" id="BlogsTable"></abp-table>
    </abp-card-body>
</abp-card>