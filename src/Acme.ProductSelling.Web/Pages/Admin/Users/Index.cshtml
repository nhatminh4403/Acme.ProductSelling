@page "/{prefix}/users"

@inject IAuthorizationService AuthorizationService
@model Acme.ProductSelling.Web.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = L["UserManagement"];
    Layout = "/Pages/Admin/Shared/_AdminLayout.cshtml";
}

@section scripts {
    <abp-script src="/Pages/Admin/Users/Index.js" />
}

<abp-card>
    <abp-card-header>
        <h2>@L["UserManagement"]</h2>
    </abp-card-header>
    <abp-card-body>
        <abp-tabs name="UsersTabs">
            <abp-tab title="@L["StaffUsers"].Value" name="Staff">
                <abp-table striped-rows="true" id="StaffUsersTable" class="nowrap"></abp-table>
            </abp-tab>
            <abp-tab title="@L["UnassignedStaff"].Value" name="Unassigned">
                <abp-table striped-rows="true" id="UnassignedStaffTable" class="nowrap"></abp-table>
            </abp-tab>
        </abp-tabs>
    </abp-card-body>
</abp-card>

<!-- Assign Store Modal -->
<abp-modal id="assignStoreModal" static="true" size="Default">
    <abp-modal-header title="@L["AssignToStore"].Value"></abp-modal-header>
    <abp-modal-body>
        <form id="assignStoreForm">
            <input type="hidden" id="userId" />
            <div class="mb-3">
                <label class="form-label">@L["UserName"]</label>
                <input type="text" class="form-control" id="userName" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">@L["Email"]</label>
                <input type="text" class="form-control" id="userEmail" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">@L["Roles"]</label>
                <input type="text" class="form-control" id="userRoles" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">@L["Store"] *</label>
                <select class="form-select" id="storeId" required>
                    <option value="">-- @L["SelectStore"] --</option>
                </select>
            </div>
        </form>
    </abp-modal-body>
    <abp-modal-footer buttons="@(AbpModalButtons.Save | AbpModalButtons.Cancel)"></abp-modal-footer>
</abp-modal>