@page "{prefix}/stores/edit/{id:guid}"
@model Acme.ProductSelling.Web.Pages.Admin.Stores.EditModel
@{
    ViewData["Title"] = L["EditStore"];
    Layout = "/Pages/Admin/Shared/_AdminLayout.cshtml";
}
<abp-card>
    <abp-card-header>
        <h2>@L["Edit"].Value</h2>
    </abp-card-header>
    <abp-card-body>
        <abp-dynamic-form abp-model="Store" asp-page="@($"/{Model.Prefix}/stores/edit/{Model.Id}")">
            <abp-input asp-for="Id" />
            <abp-form-content />
            <hr />
            <abp-button button-type="Primary" text="@L["Save"].Value" theme="Primary" />
            <a href="@($"/{Model.Prefix}/stores")" class="btn btn-secondary">@L["Cancel"].Value</a>
        </abp-dynamic-form>
    </abp-card-body>
</abp-card>