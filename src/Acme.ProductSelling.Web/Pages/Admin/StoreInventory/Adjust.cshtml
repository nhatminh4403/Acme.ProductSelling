@page "/{prefix}/store-inventory/adjust"
@model Acme.ProductSelling.Web.Pages.Admin.StoreInventory.AdjustModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Adjustment" asp-page="/Admin/StoreInventory/Adjust">
    <abp-modal>
        <abp-modal-header title="@L["AdjustInventory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />

            <div class="alert alert-info">
                <strong>@L["Product"]:</strong> @Model.ProductName<br />
                <strong>@L["Store"]:</strong> @Model.StoreName<br />
                <strong>@L["CurrentQuantity"]:</strong> @Model.CurrentQuantity
            </div>

            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>