@page "/admin/orders"
@model Acme.ProductSelling.Web.Pages.Orders.IndexModel
@using Acme.ProductSelling.Localization
@using Acme.ProductSelling.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@using Acme.ProductSelling.Permissions

@inject IStringLocalizer<ProductSellingResource> L
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = L["Title:Admin:AllOrders"];
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/libs/signalr/browser/signalr.js" />
        <abp-script src="/js/orderSignalR.js" />
        <abp-script src="/Pages/Admin/Orders/Index.js" />
    </abp-script-bundle>
}
<abp-card class="py-3 px-1">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6" class="d-flex justify-content-start align-items-center">
                @* Tiêu đề Card *@
                <abp-card-title class="mb-0 ms-3">@L["Order:Orders"]</abp-card-title>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        @* Tag Helper tạo bảng, DataTables sẽ gắn vào id này *@
        <abp-table striped-rows="true" id="OrdersTable"></abp-table>
    </abp-card-body>
</abp-card>
