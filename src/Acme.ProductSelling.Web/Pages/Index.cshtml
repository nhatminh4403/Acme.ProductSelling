            </section>

            <section class="container my-2 bg-light rounded">
                @if (Model.ProductList != null && Model.ProductList.Items != null && Model.ProductList.Items.Any())
                {
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 px-1 py-3">
                        @foreach (var product in Model.ProductList.Items)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                                    {
                                        <a asp-page="/Products/ProductDetail" asp-route-slug="@product.UrlSlug">
                                            <img src="@product.ImageUrl" class="card-img-top p-3"
                                                 alt="@product.ProductName" style="max-height: 200px; object-fit: contain;">
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="text-center p-5 bg-light"> <i class="fas fa-image fa-3x text-secondary"></i> </div>
                                    }
                                    <div class="card-body d-flex flex-column">
                                        <div class="product-header mb-2">
                                            <h6 class="card-title mb-1">
                                                <a asp-page="/Products/ProductDetail" class="text-decoration-none"
                                                   asp-route-slug="@product.UrlSlug">@product.ProductName</a>
                                            </h6>
                                            <p class="card-text text-muted small mb-0">@L["Category"]: @product.CategoryName</p>
                                        </div>
                                        @if (product.DiscountPercent > 0)
                                        {
                                            <div class="card-text mt-auto">
                                                <div class="text-muted text-decoration-line-through fs-6 mb-1">
                                                    @product.OriginalPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                                </div>
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="fw-bold fs-5 text-danger">
                                                        @product.DiscountedPrice.Value.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                                    </span>
                                                    <span class="badge bg-danger">-@product.DiscountPercent%</span>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mt-auto fw-bold text-danger fs-5">
                                                @product.OriginalPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <abp-paginator asp-page="/" show-info="true" model="Model.PagerModel" class="mb-4">
                    </abp-paginator>
                }
                else
                {
                    <div class="alert alert-info">@L["NoProductsFound"]</div> @* Key "NoProductsFound" *@
                }

            </section>

            <section class="container bg-light my-3 rounded py-3">
                <h2 class="border-bottom pb-2 mb-3 ps-2">@L["CategoryList"]</h2>
                <div class="row g-2 px-2">
                    @if (Model.CategoryList != null && Model.CategoryList.Items.Any())
                    {
                        foreach (var category in Model.CategoryList.Items)
                        {
                            <div class="col-category">
                                <a asp-page="/Products/ProductsByCategory" asp-route-CategoryId="@category.Id" class="text-decoration-none category-link">
                                    <div class="category-item-wrapper">
                                        <img src="https://placehold.co/80x80" alt="@category.Name" class="img-fluid category-img mb-2">

                                        <div class="category-name text-dark">@category.Name</div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info">@L["NoCategoriesFound"]</div>
                        </div>
                    }
                </div>
            </section>
