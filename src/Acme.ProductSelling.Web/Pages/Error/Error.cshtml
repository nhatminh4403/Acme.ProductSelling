@page "/loi"
@model Acme.ProductSelling.Web.Views.Shared.ErrorModel

@{
    ViewData["Title"] = Model.ErrorTitle;
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @if (Model.StatusCode != 0)
            {
                <h1 class="display-1 fw-bold text-primary">@Model.StatusCode</h1>
            }

            <h2 class="h2 mb-3">
                @Model.ErrorTitle
            </h2>

            <p class="fs-5 text-muted mb-4">
                @Model.ErrorMessage
            </p>

            <div class="d-flex justify-content-center gap-3">
                <button onclick="window.history.back()" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i> <!-- Optional icon -->
                    Quay về trang trước
                </button>
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-home me-2"></i> <!-- Optional icon -->
                    Về trang chủ
                </a>
            </div>

        </div>
    </div>
</div>